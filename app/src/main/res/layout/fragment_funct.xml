<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundgray">

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/lightwhite"
            android:id="@+id/btnfonction1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:clickable="false"
                android:id="@+id/fonction1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="Les fonctions"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:fontFamily="@font/regular"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:paddingTop="40dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"/>

            <TextView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fonction1"
                android:layout_alignEnd="@id/fonction1"
                android:layout_marginEnd="8dp"
                android:text="1/6"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:translationZ="5dp"/>

            <TextView
                android:id="@+id/txtvfonction1"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignBottom="@id/fonction1"
                android:text="Incomplet"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/darkgray"
                android:gravity="center"
                android:translationZ="5dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/lightwhite"
            android:id="@+id/btnfonction2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <Button
                android:clickable="false"
                android:id="@+id/fonction2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:fontFamily="@font/regular"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="start"
                android:paddingStart="13dp"
                android:paddingEnd="13dp"
                android:paddingTop="40dp"
                android:text="Les fonctions récursives"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="19sp" />

            <TextView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/fonction2"
                android:layout_alignEnd="@id/fonction2"
                android:layout_marginEnd="8dp"
                android:text="2/6"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:translationZ="5dp"/>

            <TextView
                android:id="@+id/txtvfonction2"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignBottom="@id/fonction2"
                android:text="Incomplet"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/darkgray"
                android:translationZ="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/lightwhite"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btntab1dim"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnfonction1">
            <Button
                android:clickable="false"
                android:id="@+id/tab1dim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Les tableaux à une dimension"
                android:background="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAllCaps="false"
                android:fontFamily="@font/regular"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:paddingTop="40dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp" />

            <TextView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tab1dim"
                android:layout_alignEnd="@id/tab1dim"
                android:layout_marginEnd="8dp"
                android:text="3/6"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:translationZ="5dp"/>

            <TextView
                android:id="@+id/txtvtab1dim"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignBottom="@id/tab1dim"
                android:text="Incomplet"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/darkgray"
                android:gravity="center"
                android:translationZ="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/lightwhite"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btntabndim"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnfonction2">
            <Button
                android:clickable="false"
                android:id="@+id/tabndim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Les tableaux à plusieurs dimensions"
                android:background="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAllCaps="false"
                android:fontFamily="@font/regular"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:paddingTop="40dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp" />

            <TextView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tabndim"
                android:layout_alignEnd="@id/tabndim"
                android:layout_marginEnd="8dp"
                android:text="4/6"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:translationZ="5dp"/>

            <TextView
                android:id="@+id/txtvtabndim"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignBottom="@id/tabndim"
                android:text="Incomplet"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/darkgray"
                android:gravity="center"
                android:translationZ="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/lightwhite"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btnpointers1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btntab1dim">
            <Button
                android:clickable="false"
                android:id="@+id/pointers1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Les pointeurs"
                android:background="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAllCaps="false"
                android:fontFamily="@font/regular"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:paddingTop="40dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp" />

            <TextView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/pointers1"
                android:layout_alignEnd="@id/pointers1"
                android:layout_marginEnd="8dp"
                android:text="5/6"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:translationZ="5dp"/>

            <TextView
                android:id="@+id/txtvpointers1"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignBottom="@id/pointers1"
                android:text="Incomplet"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/darkgray"
                android:gravity="center"
                android:translationZ="5dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@color/lightwhite"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/btnpointers2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btntabndim">
            <Button
                android:clickable="false"
                android:id="@+id/pointers2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Plus sur les pointeurs"
                android:background="@android:color/transparent"
                android:foreground="?android:attr/selectableItemBackground"
                android:textAllCaps="false"
                android:fontFamily="@font/regular"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:gravity="start"
                android:paddingTop="40dp"
                android:paddingStart="13dp"
                android:paddingEnd="13dp" />

            <TextView
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/pointers2"
                android:layout_alignEnd="@id/pointers2"
                android:layout_marginEnd="8dp"
                android:text="6/6"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:translationZ="5dp"/>

            <TextView
                android:id="@+id/txtvpointers2"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_alignBottom="@id/pointers2"
                android:text="Incomplet"
                android:fontFamily="@font/regular"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:background="@color/darkgray"
                android:gravity="center"
                android:translationZ="5dp"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>