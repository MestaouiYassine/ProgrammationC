<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnpremierprogc"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Premier programme en C"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnbackslashn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:fontFamily="@font/regular"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="start"
        android:paddingLeft="13dp"
        android:paddingTop="30dp"
        android:text="Le caractère de fin de ligne"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btntypevar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Les variables et leurs types"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnpremierprogc" />

    <Button
        android:id="@+id/btntypecar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Le type caractère et le code format %c"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnbackslashn" />

    <Button
        android:id="@+id/btnputchar"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="La fonction putchar"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btntypevar" />

    <Button
        android:id="@+id/btnlireclav"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Lecture d'informations au clavier"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btntypecar" />

    <Button
        android:id="@+id/btntypebase"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Les types de base du langage C"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnputchar" />

    <Button
        android:id="@+id/btnspeciform"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="Les spécificateurs de format"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnlireclav" />

    <Button
        android:id="@+id/btnop"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Les opérateurs"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btntypebase" />

    <Button
        android:id="@+id/btnconstant"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="La déclaration de constantes"
        android:background="@drawable/button"
        android:foreground="?android:attr/selectableItemBackground"
        android:textAllCaps="false"
        android:fontFamily="@font/regular"
        android:textSize="19sp"
        android:textColor="@color/white"
        android:gravity="start"
        android:paddingTop="30dp"
        android:paddingLeft="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnspeciform" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>